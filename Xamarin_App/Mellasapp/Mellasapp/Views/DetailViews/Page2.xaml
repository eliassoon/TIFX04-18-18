    x:Class="Mellasapp.Page2" Title = "My Statistics" Icon="statistics.png">
    

     <ContentPage BackgroundColor="Purple">
        <StackLayout HorizontalOptions="Center" 
                     VerticalOptions="Center">
               <Label Text="My Data" TextColor="White"/>
